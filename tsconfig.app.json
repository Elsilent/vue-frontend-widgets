{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "noUnusedLocals": false,
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue/vue-language-plugin-pug",
      "@volar/vue-language-plugin-pug"
    ]
  }
}
